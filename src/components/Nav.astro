---
const { pathname } = Astro.url;
---

<nav>
  <a href="/" class:list={{ current: pathname === '/' }}>Home</a>
  <a
    href="/cheatsheet"
    class:list={{ current: /^\/cheatsheet/.test(pathname) }}
  >
    Cheatsheet
  </a>
</nav>

<style>
  nav {
    display: flex;
    justify-content: center;
    padding: 1rem 0;
  }

  a {
    position: relative;
    margin: 0 1rem;
    text-decoration: none;
  }

  a::after {
    position: absolute;
    content: '';
    height: 1px;
    width: 100%;
    left: 0;
    bottom: -2px;
    transform-origin: center;
    background: var(--color);
  }

  a:not(.current)::after {
    transform: scaleX(0);
  }

  a:hover::after,
  a.current::after {
    transform: scaleX(1);
    transition: transform 1s;
  }
</style>

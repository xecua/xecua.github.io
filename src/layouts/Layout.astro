---
import Nav from '@components/Nav.astro';

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    {/* <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> */}
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Nav />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
    --color: #333333;
    --background: #f6f6f6;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --color: #f8f8f8;
      --background: #3c3c3c;
    }
  }

  @view-transition {
    navigation: auto;
  }

  html {
    font-family: system-ui, sans-serif;
    color: var(--color);
    background-color: var(--background);
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  a {
    color: inherit;
  }
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }
  h1 {
    font-size: 1.5rem;
    /* font-weight: 800; */
  }
  h2 {
    font-size: 1.2rem;
    font-weight: 600;
  }
</style>

---
import Layout from '@/layouts/Layout.astro';

const { frontmatter } = Astro.props;
const site = 'caffeine.page';
const title =
  frontmatter.title != null ? `${frontmatter.title} | ${site}` : site;
---

<Layout title={title}>
  <main>
    <slot />
  </main>
</Layout>

<style is:global>
  .rlc-container {
    display: block;
    border: solid 1px;
    border-radius: 5px;
    padding: 5px 10px;
    text-decoration: none;
  }
  .rlc-title {
    font-weight: bold;
  }
  .rlc-description {
    font-size: 0.8em;
    margin: 5px auto;
  }
  .rlc-url-container {
    display: flex;
    gap: 5px;
    line-height: 100%;
    font-size: 0.75em;
  }
  .rlc-image-container {
    margin-top: 5px;
    flex: 1 1 100px;
  }
  .rlc-image {
    object-fit: center;
    width: 100%;
    height: 100%;
  }
</style>
